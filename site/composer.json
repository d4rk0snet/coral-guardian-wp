{
  "name": "roots/bedrock",
  "type": "project",
  "license": "MIT",
  "description": "WordPress boilerplate with modern development tools, easier configuration, and an improved folder structure",
  "homepage": "https://roots.io/bedrock/",
  "authors": [
    {
      "name": "Scott Walkinshaw",
      "email": "scott.walkinshaw@gmail.com",
      "homepage": "https://github.com/swalkinshaw"
    },
    {
      "name": "Ben Word",
      "email": "ben@benword.com",
      "homepage": "https://github.com/retlehs"
    }
  ],
  "keywords": [
    "bedrock", "composer", "roots", "wordpress", "wp", "wp-config"
  ],
  "support": {
    "issues": "https://github.com/roots/bedrock/issues",
    "forum": "https://discourse.roots.io/category/bedrock"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org",
      "only": ["wpackagist-plugin/*", "wpackagist-theme/*"]
    },
    {
      "type" : "vcs",
      "url": "git@github.com:wp-hyperion/core.git"
    },
    {
      "type" : "vcs",
      "url": "git@github.com:d4rk0snet/coral-adoption.git"
    },
    {
      "type": "package",
      "package": {
        "name": "advanced-custom-fields/advanced-custom-fields-pro",
        "version": "5.9.3",
        "type": "wordpress-plugin",
        "dist": {
          "type": "zip",
          "url": "https://connect.advancedcustomfields.com/index.php?a=download&p=pro&k={%ACF_PRO_KEY}&t={%version}"
        },
        "require": {
          "composer/installers": "^1.8",
          "ffraenz/private-composer-installer": "^5.0"
        }
      }
    }
  ],
  "require": {
    "php": ">=7.4",
    "composer/installers": "^1.12",
    "vlucas/phpdotenv": "^5.3",
    "oscarotero/env": "^2.1",
    "roots/bedrock-autoloader": "^1.0",
    "roots/bedrock-disallow-indexing": "^2.0",
    "roots/wordpress": "5.8.1",
    "roots/wp-config": "1.0.0",
    "roots/wp-password-bcrypt": "1.1.0",
    "d4rk0snet/coral-adoption": "dev-feature/mails",
    "advanced-custom-fields/advanced-custom-fields-pro": "5.9.*",
    "ext-json": "*",
    "wpackagist-plugin/contact-form-7": "^5.5",
    "wpackagist-plugin/cookie-law-info": "^2.0",
    "wpackagist-plugin/imagify": "^1.10",
    "wpackagist-plugin/instagram-feed": "^2.9",
    "wpackagist-plugin/mailin": "^3.1",
    "wpackagist-plugin/redirection": "^5.1",
    "wpackagist-plugin/simple-google-recaptcha": "^3.8",
    "wpackagist-plugin/social-warfare": "^4.3",
    "wpackagist-plugin/wordpress-seo": "^17.8",
    "wpackagist-plugin/wp-sentry-integration": "^4.10",
    "wpackagist-plugin/wp-user-avatar": "^3.2",
    "blackfire/php-sdk": "^1.29"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.6.0",
    "roave/security-advisories": "dev-latest",
    "phpunit/phpunit":"^9.5",
    "symfony/var-dumper": "^5.2"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "allow-plugins": {
      "composer/installers": true,
      "ffraenz/private-composer-installer": true,
      "roots/wordpress-core-installer": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "extra": {
    "installer-paths": {
      "web/app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "web/app/plugins/{$name}/": ["type:wordpress-plugin"],
      "web/app/themes/{$name}/": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": "web/wp"
  },
  "scripts": {
    "post-root-package-install": [
      "php -r \"copy('.env.example', '.env');\""
    ],
    "test": [
      "phpcs"
    ]
  }
}
